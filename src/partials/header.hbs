<header class="navbar bg-primary text-primary-content shadow-lg sticky top-0 z-40">
  <div class="flex-none">
    <a href="index.html" class="text-xl font-bold hover:opacity-80">GSAU.gg</a>
  </div>

  <!-- Search bar -->
  <div class="mx-4 max-w-md flex-1">
    {{#if (eq activePage "index")}}
    <input
      type="text"
      id="search"
      x-model.debounce.300ms="search"
      placeholder="Search products... (press /)"
      class="input input-sm input-bordered bg-primary-content/10 text-primary-content placeholder:text-primary-content/50 w-full"
    />
    {{else}}
    <form action="index.html" method="get" class="w-full">
      <input
        type="text"
        name="q"
        placeholder="Search products..."
        class="input input-sm input-bordered bg-primary-content/10 text-primary-content placeholder:text-primary-content/50 w-full"
      />
    </form>
    {{/if}}
  </div>

  <!-- Desktop nav -->
  <div class="hidden lg:flex items-center gap-3 mx-4">
    {{#if (eq activePage "index")}}
      <span class="text-primary-content font-semibold text-sm">Products</span>
    {{else}}
      <a href="index.html" class="text-primary-content/70 hover:text-primary-content text-sm">Products</a>
    {{/if}}
    {{#if (eq activePage "tracker")}}
      <span class="text-primary-content font-semibold text-sm">Tracker</span>
    {{else}}
      <a href="tracker.html" class="text-primary-content/70 hover:text-primary-content text-sm">Tracker</a>
    {{/if}}
    {{#if (eq activePage "status")}}
      <span class="text-primary-content font-semibold text-sm">Status</span>
    {{else}}
      <a href="status.html" class="text-primary-content/70 hover:text-primary-content text-sm">Status</a>
    {{/if}}
    {{#if (eq activePage "about")}}
      <span class="text-primary-content font-semibold text-sm">About</span>
    {{else}}
      <a href="about.html" class="text-primary-content/70 hover:text-primary-content text-sm">About</a>
    {{/if}}
  </div>

  <!-- Discord link -->
  <a
    href="https://discord.gg/rmfZtWD95f"
    target="_blank"
    rel="noopener"
    class="btn btn-ghost btn-sm btn-circle text-primary-content/70 hover:text-primary-content"
    aria-label="Join Discord"
    title="Join Gelsoft AU Discord"
  >
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
      <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>

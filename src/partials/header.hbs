  <!-- Theme selector (pushed right) -->
  <div class="flex-none ml-auto">
    {{> theme-selector}}
  </div>
</header>

<!-- Mobile nav -->
<nav class="lg:hidden bg-base-100 border-b border-base-300 sticky top-16 z-30">
  <div class="flex justify-center gap-4 py-2 text-sm">
    {{#if (eq activePage "index")}}
      <span class="text-primary font-semibold">Products</span>
    {{else}}
      <a href="index.html" class="text-base-content/60 hover:text-base-content">Products</a>
    {{/if}}
    {{#if (eq activePage "tracker")}}
      <span class="text-primary font-semibold">Tracker</span>
    {{else}}
      <a href="tracker.html" class="text-base-content/60 hover:text-base-content">Tracker</a>
    {{/if}}
    {{#if (eq activePage "status")}}
      <span class="text-primary font-semibold">Status</span>
    {{else}}
      <a href="status.html" class="text-base-content/60 hover:text-base-content">Status</a>
    {{/if}}
    {{#if (eq activePage "about")}}
      <span class="text-primary font-semibold">About</span>
    {{else}}
      <a href="about.html" class="text-base-content/60 hover:text-base-content">About</a>
    {{/if}}
  </div>
</nav>
